<h1>List of restaurants</h1>
<ul>
<% @restaurants.each do |restaurant| %>
<li><%= link_to restaurant.name, restaurant_path(restaurant) %>, <%= restaurant.address %>, category: <%= restaurant.category %>, <%= link_to 'Edit', edit_restaurant_path(restaurant) %>, <%= link_to "Delete", restaurant_path(restaurant), method: :delete %></li>
<% end %>
</ul>
<%= link_to 'Add new restaurant', new_restaurant_path(@restaurant)%>
