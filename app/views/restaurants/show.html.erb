<h1><%= @restaurant.name %></h1>
<h2>Reviews: </h2>
<% @restaurant.reviews.each do |review| %>
<p><%= review.content %></p>
<p>Rating: <%= review.rating %></p>
<% end %>

<h2>Add a review</h2>
<%= simple_form_for ([@restaurant, @review]) do |f| %>
<%= f.input :content %>
<%= f.input :rating %>
<%= f.submit %>
<% end %>


<%= link_to 'Back', restaurants_path%>
